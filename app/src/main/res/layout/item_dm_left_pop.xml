<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical"
    android:paddingLeft="@dimen/j15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pic_pop_box"
        android:orientation="vertical"
        android:paddingLeft="@dimen/j10dp">

        <TextView
            android:id="@+id/mTextView_1"
            style="@style/text_style_15_white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="开启" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="@dimen/j5dp"
            android:layout_marginRight="@dimen/j5dp"
            android:background="@color/tyD1" />

        <TextView
            android:id="@+id/mTextView_2"
            style="@style/text_style_15_white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ACC开" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="@dimen/j5dp"
            android:layout_marginRight="@dimen/j5dp"
            android:background="@color/tyD1" />

        <TextView
            android:id="@+id/mTextView_3"
            style="@style/text_style_15_white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="关闭" />
    </LinearLayout>
</LinearLayout>

