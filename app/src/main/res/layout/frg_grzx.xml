<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141414"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mTextView1"
        style="@style/text_style_15_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/j48dp"
        android:drawableLeft="@drawable/ic_user_owner"
        android:drawablePadding="@dimen/j4dp"
        android:drawableRight="@drawable/ic_detail"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/j10dp"
        android:paddingRight="@dimen/j10dp"
        android:text="车主信息" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/j8dp"
        android:layout_marginRight="@dimen/j8dp"
        android:background="@color/tyD1" />

    <TextView
        android:id="@+id/mTextView2"
        style="@style/text_style_15_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/j48dp"
        android:drawableLeft="@drawable/ic_user_vehicel"
        android:drawablePadding="@dimen/j4dp"
        android:drawableRight="@drawable/ic_detail"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/j10dp"
        android:paddingRight="@dimen/j10dp"
        android:text="车辆信息" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/j8dp"
        android:layout_marginRight="@dimen/j8dp"
        android:background="@color/tyD1" />

    <TextView
        android:id="@+id/mTextView3"
        style="@style/text_style_15_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/j48dp"
        android:drawableLeft="@drawable/ic_user_changepassword"
        android:drawablePadding="@dimen/j4dp"
        android:drawableRight="@drawable/ic_detail"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/j10dp"
        android:paddingRight="@dimen/j10dp"
        android:text="修改密码" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/j8dp"
        android:layout_marginRight="@dimen/j8dp"
        android:background="@color/tyD1" />

    <TextView
        android:id="@+id/mTextView4"
        style="@style/text_style_15_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/j48dp"
        android:drawableLeft="@drawable/ic_user_changepin"
        android:drawablePadding="@dimen/j4dp"
        android:drawableRight="@drawable/ic_detail"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/j10dp"
        android:paddingRight="@dimen/j10dp"
        android:text="修改PIN码" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/j8dp"
        android:layout_marginRight="@dimen/j8dp"
        android:background="@color/tyD1" />

    <TextView
        android:id="@+id/mTextView5"
        style="@style/text_style_15_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/j48dp"
        android:drawableLeft="@drawable/ic_user_changemobile"
        android:drawablePadding="@dimen/j4dp"
        android:drawableRight="@drawable/ic_detail"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/j10dp"
        android:paddingRight="@dimen/j10dp"
        android:text="更换绑定手机号" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/j8dp"
        android:layout_marginRight="@dimen/j8dp"
        android:background="@color/tyD1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/j40dp"
        android:layout_marginBottom="@dimen/j30dp"
        android:layout_marginLeft="@dimen/j30dp"
        android:layout_marginRight="@dimen/j30dp"
        android:layout_marginTop="@dimen/j15dp"
        android:background="@drawable/shape_login">

        <TextView
            android:id="@+id/mImageView_logout"
            style="@style/text_style_15_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/j40dp"
            android:gravity="center"
            android:padding="@dimen/j6dp"
            android:text="退出登录"
            android:textColor="@color/shouye_red" />
    </LinearLayout>
</LinearLayout>

