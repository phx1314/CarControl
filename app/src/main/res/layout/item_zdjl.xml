<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141414"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/j30dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mImageView_l1"
            android:layout_width="1dip"
            android:layout_height="@dimen/j19dp"
            android:layout_centerHorizontal="true"
            android:background="@color/tyD1" />

        <ImageView
            android:id="@+id/mImageView_l2"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_below="@+id/mImageView_l1"
            android:layout_centerHorizontal="true"
            android:background="@color/tyD1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/j8dp"
            android:src="@drawable/ic_option_selected" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#141414"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mLinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/j10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_13_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="车辆远程诊断"
                    android:textColor="@color/A" />

                <TextView
                    android:id="@+id/mTextView_time"
                    style="@style/text_style_11_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_detail"
                    android:gravity="center_vertical"
                    android:text="2018.2.03 更新 " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/j10dp"
                android:layout_marginTop="@dimen/j10dp"
                android:background="@drawable/shape_gray_bk"
                android:orientation="horizontal"
                android:padding="@dimen/j10dp">

                <RelativeLayout
                    android:layout_width="@dimen/j60dp"
                    android:layout_height="@dimen/j60dp"
                    android:background="@drawable/shape_yuan"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mTextView_fen"
                        style="@style/text_style_17_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="70"
                        android:textColor="#fead2d" />

                    <TextView
                        android:id="@+id/mTextView_fenZ1"
                        style="@style/text_style_11_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/mTextView_fen"
                        android:layout_marginLeft="@dimen/j2dp"
                        android:layout_toRightOf="@+id/mTextView_fen"
                        android:text="分"
                        android:textColor="#fead2d" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/j12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mTextView_count"
                        style="@style/text_style_15_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_alarm"
                        android:gravity="center_vertical"
                        android:text="以下2项有问题"
                        android:textColor="@color/A" />

                    <TextView
                        android:id="@+id/mTextView_wt"
                        style="@style/text_style_13_white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/j25dp"
                        android:layout_marginTop="@dimen/j5dp"
                        android:lineSpacingExtra="@dimen/j6dp"
                        android:text="以下2项有问题\n以下2项有问题" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

