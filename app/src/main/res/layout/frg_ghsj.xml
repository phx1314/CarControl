<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141414"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/j25dp"
        android:orientation="horizontal"
        android:paddingRight="@dimen/j25dp">

        <TextView
            style="@style/text_style_15_white"
            android:layout_width="@dimen/j106dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/j25dp"
            android:text="原手机号" />

        <EditText
            android:id="@+id/mEditText_phone"
            style="@style/text_style_15_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:enabled="false"
            android:gravity="center_vertical"
            android:hint="请输入与车辆绑定的原手机号"
            android:inputType="phone"
            android:singleLine="true"
            android:textColorHint="@color/gray"
            android:textCursorDrawable="@drawable/my_cursor" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/j25dp"
        android:layout_marginRight="@dimen/j25dp"
        android:layout_marginTop="@dimen/j15dp"
        android:background="@color/tyD1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/j25dp"
        android:orientation="horizontal"
        android:paddingRight="@dimen/j25dp">

        <TextView
            style="@style/text_style_15_white"
            android:layout_width="@dimen/j106dp"
            android:layout_height="wrap_content"
            android:ems="5"
            android:paddingLeft="@dimen/j25dp"
            android:text="验证码" />

        <EditText
            android:id="@+id/mEditText_code"
            style="@style/text_style_15_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:inputType="phone"
            android:singleLine="true"
            android:textColorHint="@color/gray"
            android:textCursorDrawable="@drawable/my_cursor" />

        <ImageView
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/j8dp"
            android:background="@color/tyD1" />

        <TextView
            android:id="@+id/mTextView_fs"
            style="@style/text_style_15_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送验证码"
            android:textColor="@color/A" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/j25dp"
        android:layout_marginRight="@dimen/j25dp"
        android:layout_marginTop="@dimen/j15dp"
        android:background="@color/tyD1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/j25dp"
        android:orientation="horizontal"
        android:paddingRight="@dimen/j25dp">

        <TextView
            style="@style/text_style_15_white"
            android:layout_width="@dimen/j106dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/j25dp"
            android:text="新手机号" />

        <EditText
            android:id="@+id/mEditText_phone_n"
            style="@style/text_style_15_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:hint="请输入与车辆绑定的新手机号"
            android:inputType="phone"
            android:singleLine="true"
            android:textColorHint="@color/gray"
            android:textCursorDrawable="@drawable/my_cursor" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/j25dp"
        android:layout_marginRight="@dimen/j25dp"
        android:layout_marginTop="@dimen/j15dp"
        android:background="@color/tyD1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/j25dp"
        android:orientation="horizontal"
        android:paddingRight="@dimen/j25dp">

        <TextView
            style="@style/text_style_15_white"
            android:layout_width="@dimen/j106dp"
            android:layout_height="wrap_content"
            android:ems="5"
            android:paddingLeft="@dimen/j25dp"
            android:text="验证码" />

        <EditText
            android:id="@+id/mEditText_code_n"
            style="@style/text_style_15_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:inputType="phone"
            android:singleLine="true"
            android:textColorHint="@color/gray"
            android:textCursorDrawable="@drawable/my_cursor" />

        <ImageView
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/j8dp"
            android:background="@color/tyD1" />

        <TextView
            android:id="@+id/mTextView_fs_n"
            style="@style/text_style_15_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送验证码"
            android:textColor="@color/A" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/j25dp"
        android:layout_marginRight="@dimen/j25dp"
        android:layout_marginTop="@dimen/j15dp"
        android:background="@color/tyD1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/j40dp"
        android:layout_marginLeft="@dimen/j25dp"
        android:layout_marginRight="@dimen/j25dp"
        android:layout_marginTop="@dimen/j36dp"
        android:background="@drawable/shape_login">

        <TextView
            android:id="@+id/mImageView_dl"
            style="@style/text_style_15_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/j40dp"
            android:gravity="center"
            android:padding="@dimen/j6dp"
            android:text="更换绑定"
            android:textColor="@color/shouye_red" />
    </LinearLayout>
</LinearLayout>

